<!DOCTYPE html>
<html lang="en" xmlns="http:www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <!-- Use the 'title' property to render a page title  -->
    <title><%= title %></title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <script src="../../public/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container" align="center">
        <!-- Display flash messages  -->
        <% for(var i in messages) { %>
        <div class="alert alert-danger"><%= messages[i] %></div>
        <% } %>
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <form action="/signin" method="post">
                <div class="row">
                    <div class="col-sm"></div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="userName">User Name</label>
                            <input type="text" class="form-control" name="username" placeholder="Username">
                        </div>
                    </div>
                    <div class="col-sm"></div>
                </div>
                <div class="row">
                    <div class="col-sm"></div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="Password">Email address</label>
                            <input type="password" class="form-control" name="password" placeholder="******">
                        </div>
                    </div>
                    <div class="col-sm"></div>
                </div>
                <div class="row">
                    <div class="col-sm"></div>
                    <div class="col-sm">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success" value="Sign In">Sign In</button>
                        </div>
                    </div>
                    <div class="col-sm"></div>
                </div>
                <div class="row">
                    <div class="col-sm"></div>
                    <div class="col-sm">
                        <!-- Render the OAuth authentication links  -->
                        <a href="/oauth/facebook" class="btn btn-primary">Sign in with Facebook</a>
                        <a href="/oauth/twitter" class="btn btn-info">Sign in with Twitter</a>
                        <a href="/oauth/google" class="btn btn-warning">Sign in with Google</a>
                    </div>
                    <div class="col-sm"></div>
                </div>
            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>
</body>